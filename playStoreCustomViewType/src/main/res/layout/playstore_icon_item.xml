<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon_imageview"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/icon_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/icon_imageview"
        app:layout_constraintEnd_toEndOf="@+id/icon_imageview"
        app:layout_constraintTop_toBottomOf="@+id/icon_imageview"
        android:text="Text 1"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/icon_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/icon_imageview"
        app:layout_constraintEnd_toEndOf="@+id/icon_imageview"
        app:layout_constraintTop_toBottomOf="@+id/icon_title"
        android:text="Text 2"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/icon_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/icon_imageview"
        app:layout_constraintEnd_toEndOf="@+id/icon_imageview"
        app:layout_constraintTop_toBottomOf="@+id/icon_category"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Text 3"
        android:textSize="12sp" />



</androidx.constraintlayout.widget.ConstraintLayout>